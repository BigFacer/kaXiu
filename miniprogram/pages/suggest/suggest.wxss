/* pages/suggest/suggest.wxss */
.suggets_container{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}
.suggest_home{
  width: 100%;
  height: 100%;
}
.hand_name{
  width: 100%;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  font-size: x-large;
}
.info_text{
  width: 100%;
  text-indent: 30rpx;
  font-size: small;
  margin-bottom: 30rpx;
}
.suggest_text{
  width: 100%;
  height: 300rpx;
  border: 1rpx solid #000;
  margin-bottom: 30rpx;
  border-radius: 5rpx;
}
.entry_btn{
  border: 1rpx solid #000;
  color: #000;
  position: absolute;
  right: 30rpx;


}
